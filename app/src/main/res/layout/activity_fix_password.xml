<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fix_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nevs.car.activity.my.FixPasswordActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/n_view"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_high"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="@dimen/back_margin"
                android:layout_height="match_parent"
                android:id="@+id/back"
                android:background="@drawable/btn_bowen"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/head_back"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/title_image_back_left_margin"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/n_333333"
                android:text="@string/fix_password"
                android:textSize="@dimen/title_txt_size"/>

            <LinearLayout
                android:background="#c4c4c4"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/languaged"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/listview_click">

        <TextView
            android:id="@+id/old"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="@string/old_password"
            android:textColor="@color/item_text_left"
            android:textSize="14sp"
            />

       <EditText
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:layout_toRightOf="@+id/old"
           android:layout_marginLeft="20dp"
           android:hint="@string/nevs_hintold"
           android:maxLength="15"
           android:background="@drawable/layout_editnull"
           android:cursorVisible="false"
           android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
           android:inputType="textPassword"
           android:id="@+id/old_password"
           android:textSize="14sp"
           android:textColorHint="@color/edit_hint"
           />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/password_settinga"
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:background="@drawable/listview_click">

        <TextView
            android:id="@+id/newp"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="@string/new_password"
            android:textColor="@color/item_text_left"
            android:textSize="14sp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:hint="@string/passwordz"
            android:maxLength="15"
            android:background="@drawable/layout_editnull"
            android:cursorVisible="false"
            android:inputType="textMultiLine"
            android:password="true"
            android:id="@+id/new_password"
            android:textSize="14sp"
            android:textColorHint="@color/edit_hint"
            android:layout_toRightOf="@+id/newp"
            android:layout_marginRight="5dp"
             />
        <!--android:inputType="textPassword"-->
        <!--android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"-->
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/listview_click"
        android:id="@+id/sefe_settingb"
        >

        <TextView
            android:id="@+id/confirm"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="@string/confirm_password"
            android:textColor="@color/item_text_left"
            android:textSize="14sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/confirm"
            android:layout_marginLeft="20dp"
            android:hint="@string/nevs_hintnew"
            android:maxLength="15"
            android:background="@drawable/layout_editnull"
            android:cursorVisible="false"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
            android:inputType="textPassword"
            android:id="@+id/re_password"
            android:textSize="14sp"
            android:textColorHint="@color/edit_hint"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_text"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/for_confirm"
        android:textSize="@dimen/btn"
        android:clickable="true"
        android:background="@drawable/btn_press"
        android:id="@+id/btn_create"
        />
</LinearLayout>
