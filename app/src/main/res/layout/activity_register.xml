<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/id_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/n_view"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_high"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="@dimen/back_margin"
                android:layout_height="match_parent"
                android:id="@+id/back"
                android:background="@drawable/btn_bowen"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/head_back"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/title_image_back_left_margin"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/n_333333"
                android:text="@string/create"
                android:textSize="@dimen/title_txt_size"/>

            <LinearLayout
                android:background="#c4c4c4"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

        </RelativeLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height"
            android:background="@color/white"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/image_register_left"
                android:background="@mipmap/register_phone"
                android:id="@+id/image_register"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/hint_left"
                android:phoneNumber="true"
                android:maxLength="11"
                android:background="@drawable/layout_editnull"
                android:cursorVisible="false"
                android:textColor="@color/tab_text_color_normal"
                android:textColorHint="@color/line"
                android:textSize="14sp"
                android:hint="@string/phonenum"
                android:id="@+id/edit_phonenumber"
                android:gravity="center_vertical"
                android:digits="0123456789"
                android:layout_centerVertical="true"

                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_line_one"
            android:background="@color/line"
            android:layout_marginLeft="@dimen/margin_left_line"
            />
             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/edit_height"
                 android:background="@color/white"
                 >
                 <EditText
                     android:layout_width="150dp"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="@dimen/hint_left"
                     android:phoneNumber="true"
                     android:maxLength="8"
                     android:background="@drawable/layout_editnull"
                     android:cursorVisible="false"
                     android:textColor="@color/tab_text_color_normal"
                     android:textColorHint="@color/line"
                     android:hint="@string/re_code"
                     android:id="@+id/edit_code"
                     android:gravity="center_vertical"
                     android:digits="0123456789"
                     android:textSize="14sp"
                     android:layout_centerVertical="true"
                     />

                 <!--bg_circle_rect_code-->
                 <TextView
                     android:layout_width="100dp"
                     android:layout_height="30dp"
                     android:background="@drawable/bg_circle_rect_code"
                     android:textColor="@color/text_getmessage"
                     android:gravity="center"
                     android:layout_marginRight="20dp"
                     android:id="@+id/btn_code"
                     android:text="@string/getcode"
                     android:layout_centerVertical="true"
                     android:layout_alignParentRight="true"
                     android:layout_alignParentEnd="true"
                     android:layout_marginEnd="20dp" />

             </RelativeLayout>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="0.5dp"
                 android:background="@color/line"
                 android:layout_marginLeft="@dimen/margin_left_line"
                 />
                ///////////////
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height"
                android:background="@color/white"
                >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/image_register_left"
                android:background="@mipmap/register_password"
                android:id="@+id/imageView5" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:background="@drawable/layout_editnull"
                    android:cursorVisible="false"
                    android:maxLength="15"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    android:textColor="@color/tab_text_color_normal"
                    android:textColorHint="@color/line"
                    android:hint="@string/passwordz"
                    android:id="@+id/edit_password"
                    android:inputType="textPassword"
                    android:textSize="14sp"
                    android:layout_toRightOf="@+id/imageView5"
                    android:layout_toEndOf="@+id/imageView5"
                    android:layout_marginStart="14dp"
                    android:layout_centerVertical="true"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
                    />
                <!--android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"-->
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line"
                android:layout_marginLeft="@dimen/margin_left_line"/>
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="@dimen/edit_height"
              android:background="@color/white"
             >
          <EditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:maxLines="1"
              android:background="@drawable/layout_editnull"
              android:cursorVisible="false"
              android:maxLength="15"
              android:gravity="center_vertical"
              android:layout_marginLeft="@dimen/hint_left"
              android:textColor="@color/tab_text_color_normal"
              android:textColorHint="@color/line"
              android:hint="@string/re_repassword"
              android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
              android:id="@+id/edit_repassword"
              android:inputType="textPassword"
              android:textSize="14sp"
              android:layout_centerVertical="true"
             />
         </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"
            android:layout_marginLeft="@dimen/margin_left_line"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height"
            android:background="@color/white"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/image_register_left"
                android:background="@mipmap/register_user"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:background="@drawable/layout_editnull"
                android:cursorVisible="false"
                android:maxLength="20"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/hint_left"
                android:textColor="@color/tab_text_color_normal"
                android:textColorHint="@color/line"
                android:hint="@string/n_noupfamily"
                android:id="@+id/edit_family"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                />
            </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"
            android:layout_marginLeft="@dimen/margin_left_line"
            />
          <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/edit_height"
               android:background="@color/white"
              >
              <EditText
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:maxLines="1"
                  android:background="@drawable/layout_editnull"
                  android:cursorVisible="false"
                  android:maxLength="20"
                  android:gravity="center_vertical"
                  android:layout_marginLeft="@dimen/hint_left"
                  android:textColor="@color/tab_text_color_normal"
                  android:textColorHint="@color/line"
                  android:hint="@string/n_noupname"
                  android:id="@+id/edit_name"
                  android:textSize="14sp"
                  android:layout_centerVertical="true"
                  />

          </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"
            android:layout_marginLeft="@dimen/margin_left_line"
            />
           </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/cltj_type_true"
            android:id="@+id/iamgeis"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#b9bab9"
            android:text="@string/nevs_agree"
            android:layout_marginLeft="10dp"
            android:id="@+id/centerc"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4674c1"
            android:textSize="12sp"
            android:text="@string/nevs_agreement"
            android:id="@+id/privacy"
            android:clickable="true"
            android:background="@drawable/btn_bowens"
            android:autoLink="all"
            />
    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_text"
        android:layout_marginLeft="@dimen/marginleft_btn"
        android:layout_marginRight="@dimen/marginright_btn"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/create"
        android:textSize="@dimen/btn"
        android:clickable="true"
        android:background="@drawable/btn_press"
        android:id="@+id/btn_create"
        />
    </LinearLayout>