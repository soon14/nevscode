<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_car_copy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nevs.car.activity.my.CarCopyEnterActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/n_view"
        android:background="@color/n_EBF0F0"
        >
        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_high"
            android:background="@color/n_EBF0F0">

            <RelativeLayout
                android:layout_width="@dimen/back_margin"
                android:layout_height="match_parent"
                android:id="@+id/back"
                android:background="@drawable/btn_bowen"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/head_back"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/title_image_back_left_margin"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/n_333333"
                android:text="@string/n_tripdetails"
                android:textSize="@dimen/title_txt_size"/>
            <!--<ImageButton-->
            <!--android:id="@+id/setting_log"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:gravity="center"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginRight="@dimen/title_image_back_left_margin"-->
            <!--android:textColor="@color/title_center"-->
            <!--android:src="@mipmap/my_xcxq_share"-->
            <!--android:background="@drawable/btn_bowen"-->
            <!--/>-->
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/setting_log"
                android:background="@drawable/btn_bowen"
                android:layout_alignParentRight="true"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/my_xcxq_share"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/title_image_back_left_margin"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <LinearLayout
                android:background="#c4c4c4"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#f8f8f8"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="详情"
                    android:textColor="@color/text_default"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:text="保存"
                    android:textColor="@color/text_default"
                    android:textSize="14sp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/edit"
                    android:background="@drawable/btn_bowens"
                    android:gravity="center_vertical"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#ffffff"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="标题"
                    android:textColor="@color/android_defalt"
                    android:textSize="14sp"
                    android:layout_marginLeft="20dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="2"
                    android:background="@drawable/layout_editnull"
                    android:cursorVisible="false"
                    android:gravity="center_vertical|right"
                    android:layout_marginLeft="@dimen/edit_left_margin"
                    android:layout_marginRight="20dp"
                    android:textColorHint="@color/line"
                    android:hint="@string/pleasewrite"
                    android:paddingLeft="@dimen/edit_left"
                    android:id="@+id/text_title"
                    android:textSize="14sp"
                    android:textColor="@color/android_defalt"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line"
                android:visibility="gone"
                />
            <!--2-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/listview_click"
                android:id="@+id/re_type"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="分类"
                    android:textColor="@color/android_defalt"
                    android:textSize="14sp"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:text="@string/nevs_official"
                    android:id="@+id/text_type"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/android_defalt"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/my_grzx_lmore"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:id="@+id/image"

                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line"
                android:visibility="gone"
                />
            <!--3-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#ffffff"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="说明"
                    android:textColor="@color/android_defalt"
                    android:textSize="14sp"
                    android:layout_marginLeft="20dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="2"
                    android:background="@drawable/layout_editnull"
                    android:cursorVisible="false"
                    android:gravity="center_vertical|right"
                    android:layout_marginLeft="@dimen/edit_left_margin"
                    android:layout_marginRight="20dp"
                    android:textColorHint="@color/line"
                    android:hint="@string/pleasewrite"
                    android:paddingLeft="@dimen/edit_left"
                    android:id="@+id/text_where"
                    android:textSize="14sp"
                    android:textColor="@color/android_defalt"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#f8f8f8"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/n_tripland"
                    android:textColor="@color/text_default"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <com.amap.api.maps.MapView
                    android:id="@+id/mapViewC"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    ></com.amap.api.maps.MapView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#f8f8f8"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/n_tripspeak"
                    android:textColor="@color/text_default"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#ffffff"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/my_wdxc_time"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/imageone"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/n_triptime"
                    android:textColor="@color/android_defalt"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/imageone"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/android_defalt"
                    android:textSize="14sp"
                    android:layout_marginRight="60dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/text_time"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line"
                />
            <!--2-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#ffffff"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/my_wdxc_distant"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/imagetwo"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/n_triplas"
                    android:textColor="@color/android_defalt"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/imagetwo"
                    />

                <TextView
                    android:id="@+id/text_lands"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="13dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginBottom="13dp"
                    android:text=""
                    android:textColor="@color/android_defalt"
                    android:textSize="14sp" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line"
                />
            <!--3-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#ffffff"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/my_wdxc_power"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/imagethree"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/n_tripde"
                    android:textColor="@color/android_defalt"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/imagethree"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/android_defalt"
                    android:textSize="14sp"
                    android:layout_marginRight="60dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/text_charge"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/my_wdxc_power"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/imagefour"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:text="@string/n_first"
                    android:textColor="@color/android_defalt"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/imagefour"
                    android:id="@+id/n_start"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/text_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="130dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginBottom="13dp"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/android_defalt"
                    android:textSize="14sp" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/my_wdxc_power"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/imagefive"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:text="@string/n_end"
                    android:textColor="@color/android_defalt"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/imagefive"
                    android:id="@+id/n_end"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/android_defalt"
                    android:textSize="14sp"
                    android:layout_marginRight="60dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/text_end"
                    android:layout_marginLeft="130dp"
                    android:gravity="right"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
