<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_datas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nevs.car.activity.my.DataBuyActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/n_view"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_high"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="@dimen/back_margin"
                android:layout_height="match_parent"
                android:id="@+id/back"
                android:background="@drawable/btn_bowen"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/head_back"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/title_image_back_left_margin"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/n_333333"
                android:text="@string/data_meal"
                android:textSize="@dimen/title_txt_size"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#24A868"
            android:visibility="gone"
            >
            <!--<com.nevs.car.tools.view.MyTextView-->
            <!--android:id="@+id/tv_pmd"-->
            <!--android:layout_width="100dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:gravity="center"-->
            <!--android:text=""-->
            <!--android:background="@drawable/progress_text"-->
            <!--/>-->
            <LinearLayout
                android:id="@+id/tv_pmd"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:background="@drawable/progress_text"
                android:orientation="horizontal"
                />
        </RelativeLayout>
    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#24A868"
        android:layout_marginTop="50dp"
        android:visibility="gone"

        >
        <!--<com.nevs.car.tools.view.MyTextView-->
        <!--android:id="@+id/tv_pmd"-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:gravity="center"-->
        <!--android:text=""-->
        <!--android:background="@drawable/progress_text"-->
        <!--/>-->
        <com.nevs.car.tools.view.RainbowBar
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:rainbowbar_color="@android:color/holo_orange_light"
            app:rainbowbar_hspace="80dp"
            app:rainbowbar_vspace="20dp"
            ></com.nevs.car.tools.view.RainbowBar>
    </RelativeLayout>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#24A868"
        android:layout_marginTop="50dp"
android:visibility="gone"
        >
        <LinearLayout
            android:id="@+id/animation_top_left"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/progress_textleft"
                />
            <TextView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:background="@drawable/progress_text"
                />
            </LinearLayout>
        <LinearLayout
            android:id="@+id/animation_top_right"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/progress_textleft"
                />
            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="@drawable/progress_text"
                />
        </LinearLayout>
