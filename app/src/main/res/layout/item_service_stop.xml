<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false"
    app:cardElevation="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/android_defalt"
            android:textSize="14sp"
            android:text="湖北XX汽车销售服务有限公司"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/stop_name"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_default"
                android:textSize="12sp"
                android:text="湖北XX汽车销售服务有限公司"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/stop_lacation"
                android:layout_below="@+id/stop_name"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/stop_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:background="@drawable/item_click_yelow_code"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingRight="10dp"
                android:paddingBottom="2dp"
                android:text="@string/newphone"
                android:textColor="@color/text_data"
                android:textSize="12sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/android_defalt"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/stop_phone"
                android:layout_marginRight="15dp"
                android:text="15km"
                android:id="@+id/stop_distance"
                />
            </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"
            ></LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>