<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.nevs.car.activity.my.UserActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/n_view"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_high"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="@dimen/back_margin"
            android:layout_height="match_parent"
            android:id="@+id/back"
            android:background="@drawable/btn_bowen"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/head_back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/title_image_back_left_margin"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/n_333333"
            android:text="@string/user"
            android:textSize="@dimen/title_txt_size"/>

        <TextView
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/n_777777"
            android:text="@string/submit"
            android:textSize="@dimen/title_right_size"
            android:layout_marginRight="@dimen/title_image_back_left_margin"
            />
        <LinearLayout
            android:background="#c4c4c4"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    </RelativeLayout>
</RelativeLayout>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"

       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="120dp"
               android:gravity="center"
               android:background="@color/white"
               >
               <com.nevs.car.tools.view.CircleImageView
                   android:layout_width="80dp"
                   android:layout_height="80dp"
                   android:background="@mipmap/n_my_default"
                   android:id="@+id/image_icon"
                   />
           </RelativeLayout>

           <RelativeLayout
               android:id="@+id/languaged"
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:layout_marginTop="10dp"
               android:background="@drawable/listview_click">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:paddingLeft="20dp"
                   android:text="@string/phonenum"
                   android:textColor="@color/item_text_left"
                   android:textSize="15sp" />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:maxLines="1"
                   android:background="@drawable/layout_editnull"
                   android:gravity="center_vertical"
                   android:layout_marginLeft="@dimen/edit_left_margin"
                   android:textColor="@color/tab_text_color_normal"
                   android:textColorHint="@color/line"
                   android:paddingLeft="@dimen/edit_left"
                   android:id="@+id/edit_phone"

                   />
           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/white"
               >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0.5dp"
                   android:layout_marginLeft="10dp"
                   android:background="@color/line"/>
           </RelativeLayout>

           <RelativeLayout
               android:id="@+id/password_settinga"
               android:layout_width="match_parent"
               android:layout_height="45dp"

               android:background="@drawable/listview_click">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:paddingLeft="20dp"
                   android:text="@string/nevs_alias"
                   android:textColor="@color/item_text_left"
                   android:textSize="15sp" />

               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:maxLines="1"
                   android:background="@drawable/layout_editnull"
                   android:cursorVisible="false"
                   android:maxLength="10"
                   android:gravity="center_vertical"
                   android:layout_marginLeft="@dimen/edit_left_margin"
                   android:textColor="@color/tab_text_color_normal"
                   android:textColorHint="@color/line"
                   android:hint="@string/pleasewrite"
                   android:paddingLeft="@dimen/edit_left"
                   android:id="@+id/edit_alias"
                   android:textSize="14sp"
                   android:singleLine="true"
                   />
           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/white"

               >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0.5dp"
                   android:background="@color/line"
                   android:layout_marginLeft="10dp"
                   />
           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:background="@drawable/listview_click"
               android:id="@+id/sefe_settingb"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:paddingLeft="20dp"
                   android:text="@string/re_family"
                   android:textColor="@color/item_text_left"
                   android:textSize="15sp" />

               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:maxLines="1"
                   android:background="@drawable/layout_editnull"
                   android:cursorVisible="false"
                   android:maxLength="20"
                   android:gravity="center_vertical"
                   android:layout_marginLeft="@dimen/edit_left_margin"
                   android:textColor="@color/tab_text_color_normal"
                   android:textColorHint="@color/line"
                   android:hint="@string/pleasewrite"
                   android:paddingLeft="@dimen/edit_left"
                   android:id="@+id/edit_family"
                   android:textSize="14sp"
                   android:focusable="false"
                   />
           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/white"
               >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0.5dp"
                   android:layout_marginLeft="10dp"
                   android:background="@color/line"
                   android:layout_alignParentTop="true" />
           </RelativeLayout>

           <RelativeLayout
               android:id="@+id/language"
               android:layout_width="match_parent"
               android:layout_height="45dp"

               android:background="@drawable/listview_click">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:paddingLeft="20dp"
                   android:text="@string/nevs_name"
                   android:textColor="@color/item_text_left"
                   android:textSize="15sp" />

               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:maxLines="1"
                   android:background="@drawable/layout_editnull"
                   android:cursorVisible="false"
                   android:maxLength="20"
                   android:gravity="center_vertical"
                   android:layout_marginLeft="@dimen/edit_left_margin"
                   android:textColor="@color/tab_text_color_normal"
                   android:textColorHint="@color/line"
                   android:hint="@string/pleasewrite"
                   android:paddingLeft="@dimen/edit_left"
                   android:id="@+id/edit_name"
                   android:textSize="14sp"
                   android:focusable="false"
                   />
           </RelativeLayout>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/white"
               >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0.5dp"
                   android:layout_marginLeft="10dp"
                   android:background="@color/line"/>
           </RelativeLayout>

           <RelativeLayout
               android:id="@+id/rel_sex"
               android:layout_width="match_parent"
               android:layout_height="45dp"

               android:background="@drawable/listview_click">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:paddingLeft="20dp"
                   android:text="@string/newsex"
                   android:textColor="@color/item_text_left"
                   android:textSize="15sp" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="@dimen/edit_left_margin"
                   android:paddingLeft="@dimen/edit_left"
                   android:id="@+id/choose_sex"
                   android:text="@string/sex_no"
                   android:textColor="@color/tab_text_color_normal"
                   />

               <ImageButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:padding="10dp"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="10dp"
                   android:background="@null"
                   android:src="@mipmap/my_grzx_lmore" />
           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/white"
               >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0.5dp"
                   android:layout_marginLeft="10dp"
                   android:background="@color/line"/>
           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:background="@drawable/listview_click"
               android:id="@+id/sefe_setting"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:paddingLeft="20dp"
                   android:text="@string/nevs_email"
                   android:textColor="@color/item_text_left"
                   android:textSize="15sp" />

               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:maxLines="2"
                   android:background="@drawable/layout_editnull"
                   android:cursorVisible="false"
                   android:maxLength="50"
                   android:gravity="center_vertical"
                   android:layout_marginLeft="@dimen/edit_left_margin"
                   android:layout_marginRight="20dp"
                   android:textColor="@color/tab_text_color_normal"
                   android:textColorHint="@color/line"
                   android:hint="@string/pleasewrite"
                   android:paddingLeft="@dimen/edit_left"
                   android:id="@+id/edit_emai"
                   android:textSize="14sp"
                   />
           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/white"
               >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0.5dp"
                   android:layout_marginLeft="10dp"
                   android:background="@color/line"/>
           </RelativeLayout>
       </LinearLayout>
   </ScrollView>


</LinearLayout>
