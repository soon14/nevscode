<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_real_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nevs.car.activity.RealNameActivity">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_high"
        android:background="@color/title_background">

        <RelativeLayout
            android:layout_width="@dimen/back_margin"
            android:layout_height="match_parent"
            android:id="@+id/back"
            android:background="@drawable/btn_bowen"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/head_back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/title_image_back_left_margin"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/realname"
            android:textSize="@dimen/title_txt_size"/>

        <LinearLayout
            android:background="#c4c4c4"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:background="@color/white"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/image_register_left"
            android:text="@string/carname"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:background="@drawable/layout_editnull"
            android:cursorVisible="false"
            android:maxLength="20"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/edit_left_margin"
            android:textColor="@color/tab_text_color_normal"
            android:textColorHint="@color/line"
            android:hint="@string/pleasewrite"
            android:paddingLeft="@dimen/edit_left"
            android:id="@+id/edit_names"

            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"
        android:layout_marginLeft="@dimen/image_register_left"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:background="@color/white"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/image_register_left"
            android:text="@string/idtyte"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:maxLength="20"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/edit_left_margin"
            android:textColorHint="@color/line"
            android:paddingLeft="@dimen/edit_left"
            android:id="@+id/edit_idbody"
            android:text="@string/idbody"

            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"
        android:layout_marginLeft="@dimen/image_register_left"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:background="@color/white"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/image_register_left"
            android:text="@string/idnumbers"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:background="@drawable/layout_editnull"
            android:cursorVisible="false"
            android:maxLength="20"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/edit_left_margin"
            android:textColor="@color/tab_text_color_normal"
            android:textColorHint="@color/line"
            android:hint="@string/pleasewrite"
            android:paddingLeft="@dimen/edit_left"
            android:id="@+id/edit_idnumber"

            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"
        android:layout_marginLeft="@dimen/image_register_left"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_text"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/btn_text_left_margin"
            android:layout_marginRight="@dimen/btn_text_right_margin"
            android:layout_marginBottom="80dp"
            android:gravity="center"
            android:textColor="@color/btn_text_color"
            android:text="@string/nextstep"
            android:textSize="@dimen/btn_text_size"
            android:clickable="true"
            android:background="@drawable/btn_press"
            android:id="@+id/btn_create"
            />
    </RelativeLayout>
</LinearLayout>
