<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false"
    app:cardElevation="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/android_defalt"
                android:textSize="14sp"
                android:text="国能XXX车型上市"
                android:layout_toRightOf="@+id/image_car"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/name"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#969796"
                android:textSize="14sp"
                android:text="2018年10月1日"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/name"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/think"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/android_defalt"
                android:textSize="14sp"
                android:text="国能XXX车型上市"
                android:layout_toRightOf="@+id/name"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/phonenumber"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/proxy_fail"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_circle_rect_code"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/type"
                android:textColor="@color/text_default"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"
            android:layout_marginLeft="10dp"
            ></LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>