<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_bind_get"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activity_background"
    tools:context="com.nevs.car.activity.AddBindGetActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/n_view"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_high"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="@dimen/back_margin"
                android:layout_height="match_parent"
                android:id="@+id/back"
                android:background="@drawable/btn_bowen"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/head_back"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/title_image_back_left_margin"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/n_333333"
                android:text="@string/car_add"
                android:textSize="@dimen/title_txt_size"/>

            <LinearLayout
                android:background="#c4c4c4"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/bind_rel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/item_text"
            android:textSize="@dimen/item_text_size"
            android:text="@string/car_bind"
            android:gravity="center"
            android:layout_marginLeft="@dimen/marginleft_item_text"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@mipmap/icon1"
            android:layout_marginRight="@dimen/item_image_right_margin"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <LinearLayout
        android:background="@color/item_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_line_one"
        android:layout_marginLeft="@dimen/margin_left_line"
        />

    <RelativeLayout
        android:id="@+id/get_rel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/item_text"
            android:textSize="@dimen/item_text_size"
            android:text="@string/car_get"
            android:gravity="center"
            android:layout_marginLeft="@dimen/marginleft_item_text"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@mipmap/icon1"
            android:layout_marginRight="@dimen/item_image_right_margin"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <LinearLayout
        android:background="@color/item_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_line_one"
        android:layout_marginLeft="@dimen/margin_left_line"
        />

</LinearLayout>
