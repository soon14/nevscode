<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:slideswitch="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_air_order_enter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nevs.car.activity.AirOrderEnterActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/n_view"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_high"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="@dimen/back_margin"
                android:layout_height="match_parent"
                android:id="@+id/back"
                android:background="@drawable/btn_bowen"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/head_back"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/title_image_back_left_margin"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/n_333333"
                android:text="@string/airorderenter"
                android:textSize="@dimen/title_txt_size"/>

            <TextView
                android:id="@+id/tv_order"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/n_777777"
                android:layout_marginRight="10dp"
                android:text="@string/delete"
                android:textSize="16sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/btn_bowen"
                />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/n_view"
        android:id="@+id/rl_view"
        android:background="@color/recycle"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/center"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            />
        <com.nevs.car.tools.view.DatePickerView
            android:id="@+id/picker_hour"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/recycle"
            android:layout_toLeftOf="@+id/hour"
            />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_data"
        android:textSize="14sp"
        android:text="@string/nevs_hour"
        android:layout_toLeftOf="@+id/center"
        android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:id="@+id/hour"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_data"
            android:textSize="14sp"
            android:text="@string/nevs_minute"
            android:layout_toRightOf="@+id/picker_minute"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            />
        <com.nevs.car.tools.view.DatePickerView
            android:id="@+id/picker_minute"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/recycle"
            android:layout_toRightOf="@+id/center"
            android:layout_marginLeft="20dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/picker_tv_bg" />

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="14sp"-->
            <!--android:text="km/h"-->
            <!--android:textColor="@color/text_data"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_toRightOf="@+id/center"-->
            <!--android:layout_marginLeft="30dp"-->
            <!--/>-->

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/rl_view"
        android:id="@+id/lin"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:background="@color/white"
            android:id="@+id/choose_date"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/image_register_left"
                android:text="@string/nevs_repetition"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp"
                android:text="@string/nevs_never"
                android:gravity="center"
                android:id="@+id/text_date"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:src="@mipmap/icon1" />

            />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"
            android:layout_marginLeft="20dp"
            />

        <!--613-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:background="@color/white"
            android:id="@+id/edit_times"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/image_register_left"
                android:text="@string/nevs_times"
                android:textSize="14sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp"
                android:text="@string/nevs_chageminute"
                android:gravity="center"
                android:id="@+id/text_timess"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
               android:layout_toLeftOf="@+id/text_timess"
                android:gravity="center"
                android:id="@+id/text_times"
                android:text="15"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:src="@mipmap/icon1" />

            />

        </RelativeLayout>

        <!--613-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/listview_click"
            android:visibility="gone"
            >

            <com.nevs.car.tools.view.SwitchButton
                android:id="@+id/id_switchd"
                style="@style/SwitchButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:checked="true"
                app:kswAnimationDuration="300"
                app:kswBackDrawable="@drawable/ios_back_drawable"
                app:kswBackMeasureRatio="1.4"
                app:kswThumbDrawable="@mipmap/ios_thumb"
                app:kswThumbMarginBottom="-8dp"
                app:kswThumbMarginLeft="-5dp"
                app:kswThumbMarginRight="-5dp"
                app:kswThumbMarginTop="-2.5dp" />
            <com.nevs.car.tools.view.SlideSwitch
                android:visibility="gone"
                android:id="@+id/fapiaod"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                slideswitch:shape="circle"  />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/image_register_left"
                android:text="@string/nevs_start"
                android:textSize="14sp"
                android:layout_alignBaseline="@+id/id_switchd"
                android:layout_alignBottom="@+id/id_switchd"
                android:layout_alignParentStart="true"
                android:id="@+id/textView3d" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_text"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/for_confirm"
        android:textSize="@dimen/btn"
        android:clickable="true"
        android:background="@drawable/btn_press"
        android:layout_below="@+id/lin"
        android:layout_centerHorizontal="true"
        android:id="@+id/config"
        android:layout_marginLeft="@dimen/marginright_btn"
        android:layout_marginRight="@dimen/marginright_btn"
        />
</RelativeLayout>
