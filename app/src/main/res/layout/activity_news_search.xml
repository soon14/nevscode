<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_news_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nevs.car.activity.service.NewsSearchActivity">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_high"
        android:background="#859886">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dcdfdc"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/search"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:id="@+id/line"
            />
        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/back"
            android:background="@drawable/btn_bowen"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/head_back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/title_image_back_left_margin"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="11dp"
            android:background="#dcdfdc"
            android:layout_alignBottom="@+id/line"
            android:layout_alignLeft="@+id/line"
            android:id="@+id/lineleft"
            />
        <TextView
            android:layout_width="1dp"
            android:layout_height="11dp"
            android:background="#dcdfdc"
            android:layout_alignBottom="@+id/line"
            android:layout_alignRight="@+id/line"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/fw_zx_seach"
            android:layout_above="@+id/line"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/lineleft"
            android:layout_marginLeft="10dp"
            android:id="@+id/image_serch"
            android:background="@drawable/btn_bowen"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="#d3d8d3"
            android:layout_above="@+id/line"
            android:layout_marginLeft="40dp"
            android:textColorHint="#d3d8d3"
            android:gravity="bottom|start"
            android:background="@drawable/layout_editnull"
            android:paddingBottom="6dp"
            android:paddingLeft="36dp"
            android:id="@+id/text_content"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/search"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/toast_poisearh"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:id="@+id/search"
            android:background="@drawable/btn_bowen"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title"
        >
        <com.nevs.car.adapter.xrefreshview.XRefreshView
            android:id="@+id/xrefresh_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:scrollbars="vertical" />
        </com.nevs.car.adapter.xrefreshview.XRefreshView>
        <include layout="@layout/public404"/>
    </RelativeLayout>


</LinearLayout>
