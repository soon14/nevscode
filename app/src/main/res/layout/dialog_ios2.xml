<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="230dp"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_circular"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/huise_9B"
            android:text="@string/comm_notice"
            android:textSize="18sp"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#999"></View>
        <TextView
            android:id="@+id/dialog_tv_content"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/huise_9B" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#999"></View>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.55"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dialog_right_tv"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/bule"
                />


            <View
                android:id="@+id/view_line"
                android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:background="#999"></View>


            <TextView
                android:id="@+id/dialog_left_tv"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/bule"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>