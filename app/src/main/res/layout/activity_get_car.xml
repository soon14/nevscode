<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_get_car"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nevs.car.activity.GetCarActivity">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_high"
        android:background="@color/title_background">

        <RelativeLayout
            android:layout_width="@dimen/back_margin"
            android:layout_height="match_parent"
            android:id="@+id/back"
            android:background="@drawable/btn_bowen"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/head_back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/title_image_back_left_margin"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/title_center"
            android:text="@string/car_get"
            android:textSize="@dimen/title_txt_size"/>

        <LinearLayout
            android:background="#c4c4c4"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    </RelativeLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="100dp"
       android:background="@color/grey"
       ></LinearLayout>
</LinearLayout>


