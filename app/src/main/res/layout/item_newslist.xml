<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false"
    app:cardElevation="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >
            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/fw_zx_img"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/image_car"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/android_defalt"
                android:textSize="16sp"
                android:text="国能XXX车型上市"
                android:layout_toRightOf="@+id/image_car"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="17dp"
                android:id="@+id/title_car"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#969796"
                android:textSize="16sp"
                android:text="2018年10月1日"
                android:layout_toRightOf="@+id/image_car"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/title_car"
                android:layout_marginTop="5dp"
                android:id="@+id/time_car"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"
            android:layout_marginLeft="10dp"
            ></LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>