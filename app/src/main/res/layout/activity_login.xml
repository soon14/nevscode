<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.nevs.car.z_start.LoginActivity"
    android:animateLayoutChanges="true"
    >
    <TextView
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:id="@+id/center"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:background="@mipmap/logo"
        android:layout_centerHorizontal="true"
        android:id="@+id/image_logo"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:id="@+id/image_username"
        android:layout_above="@+id/image_password"
        android:background="@color/n_657B86"
        />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_username"
            android:layout_marginLeft="38dp"
            android:layout_marginBottom="15dp"
            android:background="@mipmap/login_username2"
            android:layout_gravity="center_vertical"
            android:id="@+id/icon_username"
            />
    <View
        android:layout_width="0.6dp"
        android:layout_height="22dp"
        android:background="@color/item_text_gray"
        android:layout_gravity="center_horizontal"
        android:layout_alignBottom="@+id/image_username"
        android:layout_toRightOf="@+id/icon_username"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/line_username"
        android:visibility="invisible"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:phoneNumber="true"
            android:digits="0123456789"
            android:maxLength="20"
            android:background="@drawable/layout_editnull"
            android:cursorVisible="false"
            android:hint="@string/re_phonenumber"
            android:gravity="center_vertical"
            android:layout_alignBottom="@+id/image_username"
            android:layout_toRightOf="@+id/icon_username"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/n_657B86"
            android:textColorHint="#CFD6DA"
            android:id="@+id/edit_username"
            android:textSize="15sp"
            />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:id="@+id/image_password"
        android:layout_above="@+id/center"
        android:layout_marginTop="50dp"
        android:background="@color/n_657B86"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_password"
        android:layout_marginLeft="38dp"
        android:layout_marginBottom="15dp"
        android:background="@mipmap/login_password1"
        android:layout_gravity="center_vertical"
        android:id="@+id/icon_passward"
        />
    <View
        android:layout_width="0.6dp"
        android:layout_height="22dp"
        android:background="@color/item_text_gray"
        android:layout_gravity="center_horizontal"
        android:layout_alignBottom="@+id/image_password"
        android:layout_toRightOf="@+id/icon_passward"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/line_password"
        android:visibility="invisible"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:background="@drawable/layout_editnull"
        android:cursorVisible="false"
        android:hint="@string/hint_password"
        android:maxLength="20"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/image_password"
        android:layout_toRightOf="@+id/icon_passward"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/n_657B86"
        android:textColorHint="#CFD6DA"
        android:id="@+id/edit_password"
        android:inputType="textPassword"
        android:textSize="15sp"
        />
<!--android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
        -->
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="38dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:textSize="14sp"
            android:id="@+id/text_register"
            android:textColor="@color/n_657B86"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:background="@drawable/btn_bowens"
            />
        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:background="@color/n_657B86"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forget_password"
            android:textSize="14sp"
            android:id="@+id/text_forget"
            android:textColor="@color/n_657B86"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:background="@drawable/btn_bowens"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:id="@+id/btn_login"
        android:layout_below="@+id/linear"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/btn_login"
        android:textSize="@dimen/btn"
        android:clickable="true"
        android:background="@drawable/btn_press_login"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/btn_login"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#b9bab9"
            android:text="@string/nevs_agree"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4674c1"
            android:textSize="12sp"
            android:text="@string/nevs_agreement"
            android:id="@+id/privacy"
            android:clickable="true"
            android:background="@drawable/btn_bowens"
            android:autoLink="all"
            />
    </LinearLayout>

    <TextView
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#b9bab9"
        android:text="@string/nevs_copyright"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />

    <include layout="@layout/loading"/>
</RelativeLayout>
