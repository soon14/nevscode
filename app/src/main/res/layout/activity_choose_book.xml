<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choose_book"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nevs.car.activity.gmap.ChooseBookActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/n_view"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_high"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="@dimen/back_margin"
                android:layout_height="match_parent"
                android:id="@+id/back"
                android:background="@drawable/btn_bowen"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/head_back"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/title_image_back_left_margin"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/n_333333"
                android:text="@string/guide_book"
                android:textSize="@dimen/title_txt_size"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/dh_detail"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_bowen"
                android:id="@+id/notice"
                android:visibility="gone"
                />
            <LinearLayout
                android:background="#c4c4c4"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/cercle_rel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:background="@drawable/listview_click"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/item_text"
            android:textSize="@dimen/item_text_size"
            android:text="@string/guide_cercle"
            android:gravity="center"
            android:layout_marginLeft="@dimen/item_left_margin"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@mipmap/icon1"
            android:layout_marginRight="@dimen/item_image_right_margin"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <LinearLayout
        android:background="@color/item_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_line_height"/>
    <RelativeLayout
        android:id="@+id/land_rel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:background="@drawable/listview_click"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/item_text"
            android:textSize="@dimen/item_text_size"
            android:text="@string/guide_land"
            android:gravity="center"
            android:layout_marginLeft="@dimen/item_left_margin"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@mipmap/icon1"
            android:layout_marginRight="@dimen/item_image_right_margin"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <LinearLayout
        android:background="@color/item_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_line_height"/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="10dp"
    android:background="#e5e5e5"
    android:textColor="#f14144"
    android:text="@string/nevs_hintall"
    android:textSize="14sp"
    android:gravity="start"
    android:paddingLeft="10dp"
    android:paddingTop="20dp"
    android:visibility="gone"
    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/speak"
        android:background="@drawable/listview_click"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/item_text"
            android:text="@string/geospeak"
            android:layout_centerInParent="true"
            android:id="@+id/centertext"
            android:layout_toRightOf="@+id/image_id"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/dh_huix"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/image_id"
            />
    </RelativeLayout>
</LinearLayout>

