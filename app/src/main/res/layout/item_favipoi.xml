<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false"
    app:cardElevation="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
        android:id="@+id/cartypeone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
            android:background="@color/white"
            >
        <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/android_defalt"
        android:textSize="14sp"
        android:text="@string/nevs_sixbridge"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
            android:id="@+id/poi_title"
            android:layout_toLeftOf="@+id/poi_delete"
        />
        <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
            android:id="@+id/poi_delete"
            android:background="@drawable/btn_bowens"
        >
        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/dh_close"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        />

        </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"
            ></LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>