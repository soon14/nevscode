<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false"
    app:cardElevation="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/android_defalt"
                android:textSize="14sp"
                android:text="国能XXX车型上市"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/stop_name"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/android_defalt"
                android:textSize="14sp"
                android:text="国能XXX车型上市"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/stop_dis"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#969796"
                android:textSize="14sp"
                android:text="2018年10月1日"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/stop_name"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/stop_address"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#969796"
                android:textSize="14sp"
                android:text="2018年10月1日"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/stop_name"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/stop_type"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"
            ></LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>